{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "rules": {
        "indent": [ "warn", "tab" ],
        "linebreak-style": [ "error", "unix" ],
        "quotes": [ "warn", "single" ],
        "semi": [ "error", "always" ],
				"no-console": [ "off" ]
    }
}
